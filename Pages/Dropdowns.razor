<section class="section">
    <h2 class="section-title">Basic Dropdown</h2>
    
    <div class="glass-card">
        <div class="glass-card-header">
            <h3 class="glass-card-title">Simple Dropdown Menu</h3>
            <p class="glass-card-subtitle">Click the button to toggle the dropdown</p>
        </div>
        
